{{#section 'js'}}
    <script>
        $(document).ready(function () {
            {{#if err_message}}
                alert('{{err_message}}')
            {{/if}}
        });
    </script>
{{/section}}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <div class="card my-3">
                <div class="card-header bg-white">
                    <div class="d-flex flex-row">
                        <div class="nav-item">
                            <a class="nav-link text-success font-weight-bold" href="/seller/product/list/active">Active</a>
                        </div>
                        <div class="nav-item">
                            <a class="nav-link text-success font-weight-bold" href="/seller/product/list/sold">Sold</a>
                        </div>
                        <div class="ml-auto">
                            {{#if this.isExSeller}}
                                <a href="/bidder/request">
                                    <button class="btn btn-success my-2 my-sm-0 text-white float-right" type="submit">
                                        <i class="fa fa-user-circle-o" aria-hidden="true"></i>
                                        Become a seller
                                    </button>
                                </a>
                            {{else}}
                                <a href="/seller/product/add">
                                    <button class="btn btn-success my-2 my-sm-0 text-white float-right" type="submit">
                                        <i class="fa fa-plus" aria-hidden="true"></i>
                                        Add a new product
                                    </button>
                                </a>
                            {{/if}}
                        </div>
                    </div>
                </div>
                {{#if this.empty}}
                    <div class="card-body">
                        <div class="text-center mb-5">
                            <img src="/public/imgs/picture/no-product-found.png" alt="No active products here">
                        </div>
                    </div>
                {{else}}
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Category</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Highest bid</th>
                                    <th>Edit</th>
                                </tr>
                                </thead>
                                <tbody>
                                    {{#each this.products}}
                                        <tr>
                                            <td>{{ProID}}</td>
                                            <td><a href="/product/{{ProID}}" class="text-success">{{ProName}}</a></td>
                                            <td>{{CatName}}</td>
                                            <td>{{UploadDate}}</td>
                                            <td>{{EndDate}}</td>
                                            <td>{{HighestBid}}</td>
                                            <td>
                                                <a class="btn btn-sm btn-success" href="/seller/product/edit?id={{ProID}}"
                                                role="button">
                                                <i class="fa fa-pencil" aria-hidden="true"></i>
                                            </td>
                                        </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        {{#each this.pageNumbers}}
            {{#if isCurrent}}
                <li class="page-item">
                    <a class="page-link bg-success text-white" href="javascript:;">{{value}}</a>
                </li>
            {{else}}
                <li class="page-item">
                    <a class="page-link text-success" href="?page={{value}}">{{value}}</a>
                </li>
            {{/if}}
        {{/each}}
    </ul>
</nav>